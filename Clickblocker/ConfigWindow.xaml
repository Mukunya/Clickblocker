<Controls:MetroWindow x:Class="Microsoft_window_manager.ConfigWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="Config"
                      Height="350"
                      Width="525"
                      BorderThickness="0" 
                      GlowBrush="Black"
                      ResizeMode="CanResizeWithGrip" Closing="close" Topmost="True">
    <StackPanel>
        <Button Height="25" Margin="5" Click="Changepassword">Change password</Button>
        <Button Height="25" Margin="5" Click="changeblock">Create new area</Button>
        <Button Height="25" Margin="5" Click="openblock">Open saved area</Button>
        <Button Height="25" Margin="5" Click="Exit">Exit</Button>
    </StackPanel>
</Controls:MetroWindow>
