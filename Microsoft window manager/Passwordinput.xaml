<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Microsoft_window_manager"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="Microsoft_window_manager.Passwordinput"
        mc:Ignorable="d"
        Title="Passwordinput" WindowStyle="None" Height="100" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <PasswordBox x:Name="passw" Margin="5" mah:TextBoxHelper.Watermark="Password" />
        <Button Grid.Row="1" Margin="5" IsDefault="True" Click="ok">OK</Button>
    </Grid>
</Window>
